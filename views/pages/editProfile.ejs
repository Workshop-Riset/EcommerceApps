<%- include('../partials/_head.ejs', {title:'Profile'}) %>

<body>
    <%- include('../partials/_nav.ejs', {role:role,userId : userId}) %>
    <section class="container">
        <h2>User Profile</h2>
        <form action="/profile/editProfile/<%= userId %> " method="post">
            <button class="edit-button" type="submit">Edit</button>
            <div>
                <label for="fullName">Full Name:</label>
                <% if (user.Profile && user.Profile.fullName) { %>
                    <input type="text" id="fullName" name="fullName" value="<%= user.Profile.fullName %>">
                <% } else { %>
                    <input type="text" id="fullName" name="fullName" value="fullName">
                <% } %>
            </div>
            <div>
                <label for="address">Address:</label>
                <% if (user.Profile && user.Profile.address) { %>
                    <textarea id="address" name="address"><%= user.Profile.address %></textarea>
                <% } else { %>
                    <textarea id="address" name="address">Address</textarea>
                <% } %>
            </div>
            <div>
                <label for="phoneNumber">Phone Number:</label>
                <% if (user.Profile && user.Profile.phoneNumber) { %>
                    <input type="tel" id="phoneNumber" name="phoneNumber" value="<%= user.Profile.phoneNumber %>">
                <% } else { %>
                    <input type="tel" id="phoneNumber" name="phoneNumber" value="+62">
                <% } %>
            </div>
        </form>
        <br>
        <br>
        <form>
            <button class="edit-button" type="button">Edit</button>
            <div>
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" value="<%= user.email %>" readonly>
            </div>
            <div>
                <label for="role">Role:</label>
                <input type="text" id="role" name="role" value="<%= user.role %>" readonly>
            </div>
        </form>
    </section>
    <%- include('../partials/_footer.ejs') %>
</body>
</html>
