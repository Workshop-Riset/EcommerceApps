<%- include('../partials/_head.ejs', {title:'Add Product'}) %>
<body>
    <%- include('../partials/_nav.ejs', {role:'Admin',userId:userId}) %>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <div class="container">
        <h1>Add New Product</h1>
        <% if (errorMessages && errorMessages.length > 0) { %>
            <div class="error-messages">
                <% if (Array.isArray(errorMessages)) { %>
                    <% errorMessages.forEach(message => { %>
                        <p><%= message %></p>
                    <% }) %>
                <% } else { %>
                    <p><%= errorMessages %></p>
                <% } %>
            </div>
        <% } %>
        
        <form action="/product/addStock/<%= data.id %>" method="post" class="product-form">
            <label for="productStock">Stock:</label>
            <input type="number" id="productStock" name="productStock">

            <button type="submit">Add Stock</button>
        </form>
    </div>
    <%- include('../partials/_footer.ejs') %>
</body>
</html>
